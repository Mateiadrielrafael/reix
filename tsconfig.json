{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "preserveConstEnums": true,
        "strict": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,
        "strictNullChecks": true
    },
    "include": [
        "./packages/**/*.ts",
        "./test/**/*.ts",
        "./rollup.config.ts",
        "./babel.config.ts"
    ],
    "typedocOptions": {
        "out": "_docs",
        "excludeExternals": true,
        "includeDeclarations": true,
        "name": "Reix",
        "readme": "README.md",
        "mode": "modules",
        "external-modulemap": ".*/(?:packages|docs)/([^/]*)/",
        "theme": "./node_modules/typedoc-neo-theme/bin/default",
        "exclude": [
            "**/*+(test|config).ts",
            "**/packages/**/sandbox/*",
            "**/packages/*/index.ts"
        ],
        "includes": ["docs"],
        "outline": [
            {
                "Bits": {
                    "@reix/bits": "modules/bits",
                    "@reix/rxjs-bits": "modules/rxjs_bits",
                    "Usage with enums": "pages/usageWithEnums",
                    "Usage with unions": "pages/usageWithUnions",
                    "When to use this package": "pages/whenToUseBits"
                },
                "Ecs": {
                    "@reix/ecs": "modules/ecs"
                },
                "Dirty": {
                    "@reix/dirty": "modules/dirty"
                }
            }
        ],
        "mdPagesSourcePath": "docs",
        "mdPagesOutputDirName": "pages"
    },
    "exclude": ["./packages/**/dist/*.*"]
}
