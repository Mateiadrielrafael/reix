{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "preserveConstEnums": true,
        "strict": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,
        "strictNullChecks": true
    },
    "include": [
        "./packages/**/*.ts",
        "./meta/**/*.ts",
        "./test/**/*.ts",
        "./rollup.config.ts",
        "./babel.config.ts"
    ]
}
